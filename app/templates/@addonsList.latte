{if count($addons)}
	<table style="width: 100%">
		<tbody>

			{foreach $addons as $addon}
				{var score = $addon->totalDownloadsCount+$addon->totalInstallsCount}
				<tr n:class="$iterator->odd ? alt, addon, $addon->deletedAt ? deleted" data-addon-id="{$addon->id}" data-addon-score="{$score}">
					<td class="name"><a title="{$addon->name}" n:href=":Detail: id => $addon->id">{$addon->name}</a></td>
					<td class="description">{$addon->shortDescription}</td>
					{*
						Temporary hidden
						<td title="Downloads & Installs" style="text-align: right;">{$score}Ã—</td>
						<td title="Vote score">{=$addonVotes($addon)->percent|number:0}&nbsp;%</td>
					*}
				</tr>
			{/foreach}
		</tbody>
	</table>
{else}
	<p>No addons found.</p>
{/if}
