{block content}

<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<td>{$addon->name}</td>
	</tr>
	<tr>
		<th>Author</th>
		<td>{$addon->user->name}</td>
	</tr>
	<tr>
		<th>Tags</th>
		<td>
		{foreach $addon->related('addon_tag') as $addonTag}
		<span class="label">{$addonTag->ref('tag')->name}</span>
		{/foreach}
		</td>
	</tr>
</table>

{!$addon->description|texy}
